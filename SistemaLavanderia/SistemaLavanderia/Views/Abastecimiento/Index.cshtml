@model SistemaLavanderia.Models.Abastecimiento
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    //ViewBag.Categoria
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="card justify-content-center">
                <div class="card-header">
                    <h1>Solicitud de Reabastecimiento a Proveedor</h1>
                </div>
                <div class="card-body">
                    <form asp-action="ReporteDeAbastecimiento">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Categoria" class="control-label"></label>
                            <select asp-for="Categoria" class="form-control" asp-items="ViewBag.Categoria"></select>
                        </div>
                        <div class="form-group">
                            <label asp-for="cantidadaIngresar" class="control-label"></label>
                            <input asp-for="cantidadaIngresar" class="form-control" />
                            <span asp-validation-for="cantidadaIngresar" class="text-danger"></span>
                        </div>
                        <div class="form-group mt-5">
                            <input type="submit" value="Solicitar" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
                <div>
                    
                </div>
            </div>
        </div>
    </div>
</div>

