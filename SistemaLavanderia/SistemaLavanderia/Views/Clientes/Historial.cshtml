@model IEnumerable<SistemaLavanderia.Models.Pedido>
@{
    ViewData["Title"] = "Historial";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Estilos {
    <link href="https://cdn.datatables.net/2.0.5/css/dataTables.dataTables.css" rel="stylesheet" />

    <link href="https://cdn.datatables.net/fixedheader/3.2.3/css/fixedHeader.dataTables.min.css" rel="stylesheet" />
}

<div class="container">
    <div class="card">
        <div class="card-header">
            <h1>Historial de cliente</h1>
        </div>
        <div class="card-body">
            <table class="table table-striped" id="tb_clientes" class="display" style="width:100%">
                <thead>
                    <tr>
                        <th>Cliente</th>
                        <th>Fecha</th>
                        <th>Precio Total</th>
                        <th>Estado</th>
                        <th>Servicio</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.ClienteNavigation.Nombre</td>
                            <td>@item.FechaPedido</td>
                            <td>@item.PrecioTotal</td>
                            <td>@item.EstadoPedidoNavigation.DesEstado</td>
                            <td>@item.ServicioNavigation.DesServicio</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="card-footer">
            <a asp-action="Index">Regresar</a>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.datatables.net/2.0.5/js/dataTables.js"></script>

    <script src="https://cdn.datatables.net/fixedheader/3.2.3/js/dataTables.fixedHeader.min.js"></script>

    <script>

        new DataTable('#tb_clientes', {
            layout: {
                bottomEnd: {
                    paging: {
                        boundaryNumbers: false
                    }
                }
            },
            "language": {
                url: "https://cdn.datatables.net/plug-ins/2.0.5/i18n/es-ES.json"
            }
        });

    </script>
}

